<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingRight="24dp"
    android:paddingBottom="8dp"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center|center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik_italic"
            android:hint="Email"
            android:text="Account Details"
            android:textAlignment="center"
            android:textColor="#673AB7"


            android:textSize="24sp" />

        <EditText
            android:id="@+id/activity_register_et_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rubik_italic"
            android:hint="Firstname"
            android:inputType="textPersonName">

            <requestFocus />
        </EditText>


        <EditText
            android:id="@+id/activity_register_et_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rubik_italic"
            android:hint="Lastname"
            android:inputType="textPersonName"

            />

        <EditText
            android:id="@+id/activity_register_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rubik_italic"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/activity_register_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rubik_italic"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/activity_register_et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rubik_italic"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/activity_register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/rubik_italic"
            android:gravity="center_horizontal"
            android:text="Register/Sign up"

            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>